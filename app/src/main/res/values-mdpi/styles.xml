<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.DeviceDefault.Light.Button">
    </style>

    <style name="RobotoSpinnerItemStyle">
        <item name="android:background">#fafafa</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="RobotoRadioButtonStyle"></style>

    <style name="TabButtonStyle">
        <item name="android:background">@drawable/tab_button_background2</item>
        <item name="android:textColor">@color/tab_button_text_color2</item>
        <item name="android:textSize">15dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:fontFamily">sans-sarif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CardTitleStyle">
        <item name="android:textSize">19dp</item>
        <item name="android:fontFamily">sans-sarif-light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>