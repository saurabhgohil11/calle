<resources>

    <!-- dialog theme for activity which extends activity-->
    <style name="NoTitleDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/action_bar_primary_color</item>
        <item name="colorPrimaryDark">@color/action_bar_primary_dark_color</item>

        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:fontFamily">sans-serif-light</item>

        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>

        <item name="android:spinnerDropDownItemStyle">@style/RobotoSpinnerItemStyle</item>
        <item name="android:radioButtonStyle">@style/RobotoRadioButtonStyle</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/action_bar_primary_color</item>
        <item name="colorPrimaryDark">@color/action_bar_primary_dark_color</item>

        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:fontFamily">sans-serif-light</item>

        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.DeviceDefault.Light.Button">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RobotoSpinnerItemStyle">
        <item name="android:textSize">17dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="RobotoRadioButtonStyle">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TabButtonStyle">
        <item name="android:background">@drawable/tab_button_background2</item>
        <item name="android:textColor">@color/tab_button_text_color2</item>
        <item name="android:textSize">15dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!--Preference activity-->

    <style name="AppThemePreference" parent="AppTheme">
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
        <item name="android:textColor">@color/preference_text_primary_color</item>
        <item name="android:textColorSecondary">@color/preference_text_secondary_color</item>
    </style>

    <style name="Widget.TextView.ListSeparator" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PreferenceListHeader"
        parent="Widget.TextView.ListSeparator">
        <item name="android:textColor">@color/preference_header_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="BottomButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="InnerButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@drawable/primary_round</item>
    </style>

    <style name="CardTitleStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CardHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_subtitle_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="CardHeaderMinStyle" parent="@style/CardHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="CardSmallTextStyle">
        <item name="android:textSize">@dimen/call_info_card_small_text_size</item>
        <item name="android:textColor">#888888</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LogDetailTextStyle">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="HelpQuetionStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HelpAnswerStyle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="UnknownListButtonStyle">
        <item name="android:background">@drawable/list_button_background</item>
        <item name="android:textColor">#cc010101</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="IndicatorRadioButtonStyle">
        <item name="android:layout_width">@dimen/radio_button_size</item>
        <item name="android:layout_height">@dimen/radio_button_size</item>
        <item name="android:layout_margin">@dimen/radio_button_padding</item>
        <item name="android:background">@drawable/radio_button_indicator</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:clickable">false</item>
    </style>

</resources>
