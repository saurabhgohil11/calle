<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <Button
        android:id="@+id/contactImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/contact_image_bg"
        android:layout_gravity="center"
        android:text="S"
        android:textSize="25dp"
        android:textColor="@color/text_color_white"
        android:fontFamily="sans-serif-thin"/>
    <TextView
        android:id="@+id/nameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contactImageButton"
        android:layout_toRightOf="@+id/contactImageButton"
        android:text="Name"
        />
    <TextView
        android:id="@+id/numberItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contactImageButton"
        android:layout_toRightOf="@+id/contactImageButton"
        android:layout_below="@id/nameItem"
        android:text="Number"/>
    <TextView
        android:id="@+id/timeItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contactImageButton"
        android:layout_toRightOf="@+id/contactImageButton"/>
    <TextView
        android:id="@+id/typeItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contactImageButton"
        android:layout_toRightOf="@+id/contactImageButton"/>
</RelativeLayout>